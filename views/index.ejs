<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <title>Cytrus | <%- pageTitle %></title>

  <style>
    @import url('https://fonts.googleapis.com/css?family=Roboto:300,500');

    body {
      background: #2C2F33;
      margin: 0 0;
      padding: 0 0;
    }

    .page-content {
      padding: 4px 42px;
    }

    .page-content h1 {
      margin-bottom: -10px;
    }

    h1, h2, h3, h4, h5, h6 {
      font-family: 'Roboto', sans-serif;
      font-weight: 500;
      color: #ffffff;
    }

    p, a, .guildimg .guildname {
      font-family: 'Roboto', sans-serif;
      font-weight: 300;
      color: #ffffff;
    }

    .navbar {
      background: #23272A;
      padding: 21px 42px;
    }

    .navbar a {
      transition: .25s ease;
      color: #ffffff;
      text-decoration: none;
    }

    .navbar a:hover {
      color: #7792f3;
    }

    .navbar a:not(:last-child) {
      margin-right: 12px;
    }

    .navbar .right {
      float: right;
    }
    
    .guildimg {
      position: relative;
      display: inline-block;
    }

    .guildimg .guildname {
      visibility: hidden;
      width: 120px;
      background-color: black;
      color: #fff;
      text-align: center;
      padding: 5px 0;
      border-radius: 10px;
      position: absolute;
      z-index: 1;
      opacity: 0;
    }

    .guildimg:hover .guildname {
      visibility: visible;
      transition: 0.6s;
      opacity: 1;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar.ejs') %>

  <div class="page-content">
    <% if (!user || !guilds) { %>
      <h1>Welcome</h1>
      <p>To get started, login by clicking <em>Login</em> on the navbar, then go to the servers page and choose a server to manage.</p>
    <% } else { %>
      <div class="userinfo">
        <h1>
          Welcome <%= user.username %>#<%= user.discriminator %>
        </h1>

        <p>Choose a server to begin</p><br><br>
      </div>
      <div>
        <% guilds.forEach((guild) => { %>
          <% if (!djsclient.guilds.has(guild.id)) { %>
            <% if (guild.icon) { %>
              <div class="guildimg">
                <a target="_blank" href="https://discordapp.com/oauth2/authorize?client_id=526593597118873620&permissions=8&scope=bot">
                  <img style="border-radius: 50px;" width="100" height="100" src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=256">
                </a>
                <span class="guildname"><%= guild.name %></span>
              </div>
            <% } else { %>
              <div class="guildimg">
                <a target="_blank" href="https://discordapp.com/oauth2/authorize?client_id=526593597118873620&permissions=8&scope=bot">
                  <img style="border-radius: 50px;" width="100" height="100" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ4V_45p8ijmERJUhOCGBru6baQrLT9exJga5YhzA9Rgbz3NQszQw">
                </a>
                <span class="guildname"><%= guild.name %></span>
              </div>
            <% } %>
          <% } else { %>
            <% if (guild.icon) { %>
              <div class="guildimg">
                <a href="./guild?id=<%= guild.id %>">
                  <img style="border-radius: 50px;" width="100" height="100" src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=256">
                </a>
                <span class="guildname"><%= guild.name %></span>
              </div>
            <% } else { %>
              <div class="guildimg">
                <a href="./guild?id=<%= guild.id %>">
                  <img style="border-radius: 50px;" width="100" height="100" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ4V_45p8ijmERJUhOCGBru6baQrLT9exJga5YhzA9Rgbz3NQszQw">
                </a>
                <span class="guildname"><%= guild.name %></span>
              </div>
            <% } %>
          <% } %>
        <% }) %>
      </div>
    <% } %>    
    </div>
</body>
</html>