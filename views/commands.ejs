<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <title>Cytrus | Dashboard</title>

  <style>
    @import url('https://fonts.googleapis.com/css?family=Roboto:300,500');

    body {
      background: #2C2F33;
      margin: 0 0;
      padding: 0 0;
    }

    .page-content {
      padding: 4px 42px;
    }

    .page-content h1 {
      margin-bottom: -10px;
    }

    h1, h2, h3, h4, h5, h6 {
      font-family: 'Roboto', sans-serif;
      font-weight: 500;
      color: #ffffff;
    }

    p, a, .guildimg .guildname {
      font-family: 'Roboto', sans-serif;
      font-weight: 300;
      color: #ffffff;
    }

    .navbar {
      background: #23272A;
      padding: 21px 42px;
    }

    .navbar a {
      transition: .25s ease;
      color: #ffffff;
      text-decoration: none;
    }

    .navbar a:hover {
      color: #7792f3;
    }

    .navbar a:not(:last-child) {
      margin-right: 12px;
    }

    .navbar .right {
      float: right;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar.ejs') %>
  
  <div>
    <center>
      <%
        let commandNames = djsclient.commands.keyArray();
        let longest = commandNames.reduce((long, str) => Math.max(long, str.length), 0);

        let currentCategory = '';
        let output = '';
        let sorted = djsclient.commands.array().sort((p, c) => p.help.category > c.help.category ? 1 :  p.help.name > c.help.name && p.help.category === c.help.category ? 1 : -1 );
        sorted.forEach(c => {
          const cat = c.help.category;
          
          if (currentCategory !== cat) { let doInputPTag = false;%>         
          <% if (doInputPTag == true) { %></p> <% } %><h3><%= cat %> Commands</h3><p>
            <% currentCategory = cat;
          }
            %><%= c.help.name %> <% doInputPTag = true;
        });
      %>
    </center>
  </div>
</body>
</html>